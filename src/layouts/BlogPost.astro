---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import FormattedDate from '@components/FormattedDate.astro';
import BaseLink from '@components/BaseLink.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="font-sans bg-gray-100 dark:bg-gray-900 text-gray-700 dark:text-gray-400 max-w-xl mx-auto px-4">
		<Header />
		<main>
			<article class="mt-8">
				<div class="flex flex-row justify-between items-center text-sm mb-4">
					<BaseLink href="/writing">&#8592; Back</BaseLink>
					<div class="text:gray-600 dark:text-gray-500">
						<FormattedDate date={pubDate} />
					</div>
				</div>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div>
					<div class="title mt-2 mb-8">
						<h1 class="text-4xl font-medium">{title}</h1>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
